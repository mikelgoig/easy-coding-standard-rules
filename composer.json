{
    "name": "mikelgoig/easy-coding-standard-rules",
    "description": "Easy Coding Standard rules.",
    "license": "MIT",
    "type": "library",
    "version": "1.0.1",
    "keywords": [
        "code-style",
        "coding-standard",
        "dev",
        "easy-coding-standard",
        "ecs",
        "linting",
        "static-analysis"
    ],
    "authors": [
        {
            "name": "Mikel Goig",
            "email": "m@mikelgoig.com"
        }
    ],
    "require": {
        "php": "8.3.*",
        "symplify/easy-coding-standard": "^12.5"
    },
    "require-dev": {
        "captainhook/captainhook-phar": "^5.24",
        "captainhook/hook-installer": "^1.0",
        "ramsey/conventional-commits": "^1.5"
    },
    "autoload": {
        "psr-4": {
            "MikelGoig\\EasyCodingStandard\\": "src/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "captainhook/captainhook-phar": true,
            "captainhook/hook-installer": true
        },
        "sort-packages": true
    }
}
